<Window x:Class="GlobusT.RequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlobusT"
        mc:Ignorable="d"
        Title="Заявка" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Grid Background="#f5f7fa">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#2c3e50" 
                Padding="20">
            <TextBlock x:Name="RequestIdText" 
                       Text="Новая заявка" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="20" 
                CornerRadius="8"
                Padding="25">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Услуга -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Услуга *" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   Foreground="#2c3e50"/>
                        <ComboBox x:Name="ServiceComboBox" 
                                  Height="40"
                                  FontSize="14"
                                  Padding="10"
                                  BorderBrush="#bdc3c7"
                                  BorderThickness="1"
                                  VerticalContentAlignment="Center"
                                  SelectionChanged="ServiceComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Клиент -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Клиент *" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   Foreground="#2c3e50"/>
                        <ComboBox x:Name="UserComboBox" 
                                  Height="40"
                                  FontSize="14"
                                  Padding="10"
                                  BorderBrush="#bdc3c7"
                                  BorderThickness="1"
                                  VerticalContentAlignment="Center">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FullName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Дата -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Дата *" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   Foreground="#2c3e50"/>
                        <DatePicker x:Name="DatePicker" 
                                    Height="40"
                                    FontSize="14"
                                    Padding="10"
                                    BorderBrush="#bdc3c7"
                                    BorderThickness="1"
                                    VerticalContentAlignment="Center"
                                    SelectedDateFormat="Short"/>
                    </StackPanel>

                    <!-- Количество специалистов -->
                    <StackPanel Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Количество специалистов *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"
                                           Foreground="#2c3e50"/>
                                <TextBox x:Name="LicenseQuantityTextBox" 
                                         Height="40"
                                         FontSize="14"
                                         Padding="10"
                                         BorderBrush="#bdc3c7"
                                         BorderThickness="1"
                                         VerticalContentAlignment="Center"
                                         TextChanged="LicenseQuantityTextBox_TextChanged"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" 
                                       x:Name="AvailableLicensesText" 
                                       Text="Доступно: 0" 
                                       FontSize="14"
                                       Margin="20,30,0,0"
                                       VerticalAlignment="Top"/>
                        </Grid>
                    </StackPanel>

                    <!-- Статус -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Статус *" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   Foreground="#2c3e50"/>
                        <ComboBox x:Name="StatusComboBox" 
                                  Height="40"
                                  FontSize="14"
                                  Padding="10"
                                  BorderBrush="#bdc3c7"
                                  BorderThickness="1"
                                  VerticalContentAlignment="Center">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Комментарий -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Комментарий" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   Foreground="#2c3e50"/>
                        <TextBox x:Name="CommentTextBox" 
                                 Height="100"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#bdc3c7"
                                 BorderThickness="1"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Информация о доступных слотах -->
                    <Border Background="#f8f9fa" 
                            CornerRadius="5" 
                            Padding="15"
                            Margin="0,0,0,20"
                            BorderBrush="#e9ecef" 
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Информация о доступных слотах:" 
                                       FontSize="12" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"
                                       Foreground="#495057"/>
                            <TextBlock Text="• Красный фон: доступно менее 10% мест"
                                       FontSize="11"
                                       Foreground="#dc3545"/>
                            <TextBlock Text="• Жирный шрифт: услуга начнётся в течение недели"
                                       FontSize="11"
                                       Foreground="#007bff"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="White" 
                Padding="20"
                BorderBrush="#e0e0e0" 
                BorderThickness="1,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка удаления -->
                <Button Grid.Column="1" 
                        x:Name="DeleteButton" 
                        Content="Удалить" 
                        Background="#dc3545"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="Collapsed"
                        Click="DeleteButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Кнопка отмены -->
                <Button Grid.Column="2" 
                        x:Name="CancelButton" 
                        Content="Отмена" 
                        Background="#6c757d"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CancelButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Кнопка сохранения -->
                <Button Grid.Column="3" 
                        x:Name="SaveButton" 
                        Content="Сохранить" 
                        Background="#28a745"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="20,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SaveButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
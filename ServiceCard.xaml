<UserControl x:Class="GlobusT.ServiceCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:GlobusT"
             mc:Ignorable="d"
             Height="280" 
             Width="280"
             Margin="10">

    <Border Background="{Binding BackGroundColor}" 
            BorderBrush="#e0e0e0" 
            BorderThickness="1"
            CornerRadius="12"
            Padding="15">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Изображение или заглушка -->
            <Border Grid.Row="0" 
                    Background="#f8f9fa" 
                    Height="80" 
                    CornerRadius="8"
                    Margin="0,0,0,15">
                <!-- Заглушка если нет изображения -->
                <TextBlock Text="Услуга" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Foreground="#3498db"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Название услуги -->
            <TextBlock Grid.Row="1" 
                       Text="{Binding Name}" 
                       FontSize="16" 
                       FontWeight="{Binding TitleFontWeight}"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,10"
                       Foreground="#2c3e50"/>

            <!-- Область разработки -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,8">
                <TextBlock Text="Область: " 
                           FontSize="12"
                           Foreground="#7f8c8d"/>
                <TextBlock Text="{Binding IdDevelopmentAreaNavigation.Name}" 
                           FontSize="12"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Тип команды -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,8">
                <TextBlock Text="Команда: " 
                           FontSize="12"
                           Foreground="#7f8c8d"/>
                <TextBlock Text="{Binding IdTypeCommandNavigation.Name}" 
                           FontSize="12"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Информация о дате и слотах -->
            <Grid Grid.Row="4" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Дата -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Дата" 
                               FontSize="11" 
                               HorizontalAlignment="Center"
                               Foreground="#7f8c8d"/>
                    <TextBlock Text="{Binding Date, StringFormat={}{0:dd.MM.yy}}" 
                               FontSize="14" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Свободные слоты -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Свободно" 
                               FontSize="11" 
                               HorizontalAlignment="Center"
                               Foreground="#7f8c8d"/>
                    <TextBlock Text="{Binding FreeSlot}" 
                               FontSize="14" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Цена -->
            <Border Grid.Row="5" 
                    Background="#3498db" 
                    CornerRadius="6" 
                    Padding="10,6">
                <TextBlock Text="{Binding Price, StringFormat={}{0:#,0} ₽}" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
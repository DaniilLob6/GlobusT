<UserControl x:Class="GlobusT.RequestCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:GlobusT"
             mc:Ignorable="d"
             Height="180" 
             Width="380"
             Margin="5">

    <Border Background="White" 
            BorderBrush="#e0e0e0" 
            BorderThickness="1"
            CornerRadius="8"
            Padding="15">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Основная информация -->
            <StackPanel Grid.Column="0">
                <!-- Заголовок с ID -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Заявка #" 
                               FontSize="14" 
                               Foreground="#7f8c8d"/>
                    <TextBlock Text="{Binding Id}" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="#2c3e50"/>
                </StackPanel>

                <!-- Клиент -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Клиент: " 
                               FontSize="12"
                               Foreground="#7f8c8d"/>
                    <TextBlock Text="{Binding IdUserNavigation.FullName}" 
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Услуга -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Услуга: " 
                               FontSize="12"
                               Foreground="#7f8c8d"/>
                    <TextBlock Text="{Binding IdServiceNavigation.Name}" 
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Дата -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Дата: " 
                               FontSize="12"
                               Foreground="#7f8c8d"/>
                    <TextBlock Text="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}" 
                               FontSize="12"/>
                </StackPanel>

                <!-- Количество специалистов -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Специалистов: " 
                               FontSize="12"
                               Foreground="#7f8c8d"/>
                    <TextBlock Text="{Binding CountNeedSpecialists}" 
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Статус -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Border x:Name="StatusBorder"
                            CornerRadius="4"
                            Padding="8,3"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding IdStatusRequestNavigation.Name}" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Комментарий -->
                <TextBlock Text="{Binding Comment}" 
                           FontSize="11" 
                           FontStyle="Italic"
                           Foreground="#95a5a6"
                           TextWrapping="Wrap"
                           MaxHeight="40"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- Кнопка редактирования -->
            <Button Grid.Column="1" 
                    x:Name="EditButton" 
                    Content="✏️" 
                    ToolTip="Редактировать заявку"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Width="30" 
                    Height="30"
                    Cursor="Hand"
                    Click="EditButton_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent" 
                                            CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f0f0f0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
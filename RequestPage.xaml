<Page x:Class="GlobusT.RequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:GlobusT"
      mc:Ignorable="d"
      Title="Заявки"
      Height="Auto" 
      Width="Auto">

    <Grid Background="#f5f7fa">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#2c3e50" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка назад -->
                <Button Grid.Column="0" 
                        x:Name="BackButton" 
                        Content="← Назад к услугам" 
                        Background="Transparent"
                        Foreground="White"
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        Padding="10,5">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent" 
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#34495e"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Заголовок страницы -->
                <TextBlock Grid.Column="1" 
                           Text="Управление заявками" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- Кнопка создания заявки -->
                <Button Grid.Column="2" 
                        x:Name="CreateRequestButton" 
                        Content="+ Новая заявка" 
                        Background="#27ae60"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="15,8"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CreateRequestButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="20,15"
                Margin="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Поиск -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Поиск:" 
                               FontSize="14" 
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="SearchTextBox" 
                             Width="200" 
                             Height="35"
                             FontSize="14"
                             Padding="10"
                             BorderBrush="#bdc3c7"
                             BorderThickness="1"
                             TextChanged="SearchTextBox_TextChanged"
                             VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <!-- Фильтр по статусу -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            Margin="30,0,0,0">
                    <TextBlock Text="Статус:" 
                               FontSize="14" 
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="StatusFilterComboBox" 
                              Width="150" 
                              Height="35"
                              FontSize="14"
                              VerticalContentAlignment="Center"
                              SelectionChanged="StatusFilterComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Сортировка -->
                <Button Grid.Column="3" 
                        x:Name="SortButton" 
                        Content="По дате ▼" 
                        Background="#ecf0f1"
                        Foreground="#2c3e50"
                        FontSize="14"
                        Margin="30,0,0,0"
                        Padding="15,8"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SortButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Количество записей -->
                <TextBlock Grid.Column="4" 
                           x:Name="CountTextBlock"
                           Text="Записей: 0" 
                           FontSize="14" 
                           Margin="30,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="#7f8c8d"/>
            </Grid>
        </Border>

        <!-- Список заявок -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="20">
            <ItemsControl x:Name="RequestItemControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:RequestCard/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
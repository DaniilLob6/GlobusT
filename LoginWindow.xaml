<Window x:Class="GlobusT.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlobusT"
        mc:Ignorable="d"
        Title="Вход в систему" 
        Height="400" 
        Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="White" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" 
                       Text="Глобус Т." 
                       FontSize="28" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"
                       Foreground="#2c3e50"/>

            <!-- Изображение - заглушка -->
            <Border Grid.Row="1" 
                    Width="80" 
                    Height="80"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"
                    Background="#3498db"
                    CornerRadius="40">
                <TextBlock Text="GT" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Логин -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Логин:" 
                           FontSize="14" 
                           Margin="0,0,0,5"
                           Foreground="#34495e"/>
                <TextBox x:Name="LogintextBox" 
                         FontSize="14" 
                         Padding="10"
                         BorderBrush="#bdc3c7"
                         BorderThickness="1"/>
            </StackPanel>

            <!-- Пароль -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="Пароль:" 
                           FontSize="14" 
                           Margin="0,0,0,5"
                           Foreground="#34495e"/>
                <PasswordBox x:Name="PasswordtextBox" 
                             FontSize="14" 
                             Padding="10"
                             BorderBrush="#bdc3c7"
                             BorderThickness="1"/>
            </StackPanel>

            <!-- Кнопка входа -->
            <Button Grid.Row="4" 
                    x:Name="ExitButton" 
                    Content="Войти" 
                    Background="#3498db"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Padding="15,10"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ExitButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Кнопка гостя -->
            <Button Grid.Row="5" 
                    x:Name="GuestButton" 
                    Content="Войти как гость" 
                    Background="#ecf0f1"
                    Foreground="#7f8c8d"
                    FontSize="14"
                    Padding="15,8"
                    Margin="0,15,0,0"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="GuestButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Информация -->
            <TextBlock Grid.Row="6" 
                       Text="© 2026 Глобус Технолоджи" 
                       FontSize="12" 
                       Foreground="#95a5a6"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,10"/>
        </Grid>
    </Border>
</Window>